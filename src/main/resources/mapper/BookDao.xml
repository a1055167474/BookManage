<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.SpringProjectDemo.dao.BookDao">

    <resultMap id="BaseResultMap" type="com.example.SpringProjectDemo.entity.Book">
        <!--@Table book-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, author, description, amount, create_time, state, is_deleted
        from t_book
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, author, description, amount, create_time, state, is_deleted
        from t_book
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, author, description, amount, create_time, state, is_deleted
        from t_book
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="author != null and author != ''">
                and author LIKE CONCAT('%',#{author},'%')
            </if>
            <if test="description != null and description != ''">
                and description LIKE CONCAT('%',#{description},'%')
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
            <if test="isDeleted != null">
                and is_deleted = #{isDeleted}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_book(name, author, description, amount, create_time, state, is_deleted)
        values (#{name}, #{author}, #{description}, #{amount}, #{createTime}, #{state}, #{isDeleted})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_book
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if><if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_book where id = #{id}
    </delete>

</mapper>